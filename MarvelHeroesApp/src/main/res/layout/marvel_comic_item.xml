<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#020A21">

    <RelativeLayout
        android:id="@+id/cardLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="12dp"
        android:background="@drawable/marvel_heroes_card_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewComicImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="24dp"
            tools:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/textViewComicTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageViewComicImage"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_toEndOf="@+id/imageViewComicImage"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Wolverine" />

        <TextView
            android:id="@+id/textViewComicDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewComicTitle"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_toEndOf="@+id/imageViewComicImage"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="A very important leader among the X Mens. Has adamant claws, that he uses to fight enemies" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>